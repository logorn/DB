<project name="DB" default="build" basedir=".">

    <property name="src"   location="src"/>
    <property name="build" location="_build"/>

    <target name="init">
        <mkdir dir="${build}"/>
    </target>

    <target name="autoload" description="Creates the Autoloader">
        <exec executable="php">
            <arg value="scripts/autoload.php"/>
            <arg value="${src}"/>
            <arg value="${src}/Autoload.php"/>
        </exec>
    </target>

    <target name="test" depends="">
        <exec executable="phpunit"/>
    </target>

    <target name="build" depends="autoload, test">
    </target>

    <target name="clean" description="clean up">
        <delete dir="${build}"/>
    </target>

</project>
